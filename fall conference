<script>
const searchBox = document.getElementById('searchBox');
const timeFilter = document.getElementById('timeFilter');
const speakerFilter = document.getElementById('speakerFilter');
const roomFilter = document.getElementById('roomFilter');
const resetBtn = document.getElementById('resetBtn');
const sessions = document.querySelectorAll('.card');

function filterSessions() {
  const q = searchBox.value.toLowerCase();
  const t = timeFilter.value;
  const s = speakerFilter.value;
  const r = roomFilter.value;

  sessions.forEach(card => {
    const matchSearch = card.textContent.toLowerCase().includes(q);
    const matchTime = !t || card.dataset.time === t;
    const matchSpeaker = !s || card.dataset.speaker === s;
    const matchRoom = !r || card.dataset.room === r;
    card.style.display = (matchSearch && matchTime && matchSpeaker && matchRoom) ? "" : "none";
  });
}

[searchBox, timeFilter, speakerFilter, roomFilter].forEach(el => el.addEventListener('input', filterSessions));
resetBtn.addEventListener('click', () => {
  searchBox.value = "";
  timeFilter.value = "";
  speakerFilter.value = "";
  roomFilter.value = "";
  filterSessions();
});
</script>
